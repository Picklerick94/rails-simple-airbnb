<div class="container mt-4">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="flat-form">
        <h1>Add a new Flat</h1>
        <%= simple_form_for (@flat) do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <div class="mt-3">
            <%= f.submit "create flat", class: 'btn btn-primary' %>
            <%= f.submit "cancel", class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>